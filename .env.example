# Basic App Config
APP_NAME=Ticketify
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1

# Database
# PostgreSQL format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://postgres:123@localhost:5432/ticketify
#DATABASE_URL=postgresql://user:password@localhost:5432/ticketify

# Security
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Comma-separated or JSON array format
ALLOWED_HOSTS=["http://localhost:3000"]

# MercadoPago
# Get your credentials from: https://www.mercadopago.com.pe/developers/panel
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADOPAGO_SANDBOX=True

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com (use App Password, not regular password)
# For Outlook: smtp-mail.outlook.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ticketify.com

# Redis
REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/webp"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
